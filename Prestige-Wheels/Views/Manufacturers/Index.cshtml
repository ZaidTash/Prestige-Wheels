@using Prestige_Wheels.Models.Manufacturers;
@model IEnumerable<ManufacturersViewModel>

@{
    ViewData["Title"] = "Index";
}
<div class="container">
<h1>Manufacturers</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
            @foreach (var manufacturer in Model)
            {
        <tr>
            <td>
                        @Html.DisplayFor(modelItem => manufacturer.Name)
            </td>
            <td>
                        @Html.DisplayFor(modelItem => manufacturer.Year)
            </td>
            <td>
                        <a class="text-decoration-none" asp-action="Edit" asp-route-id="@manufacturer.Id">
                            <i class="fa-solid fa-pen"></i>
                        </a>
                        <a class="text-decoration-none ms-2" asp-action="Details" asp-route-id="@manufacturer.Id">
                            <i class="fa-solid fa-circle-info"></i>
                        </a>

                        <span class="pointer ms-2 text-danger" data-bs-toggle="tooltip" data-bs-title="Delete">

                            <i class="fa-solid fa-trash" data-bs-toggle="modal" data-bs-target="#deleteModal_@manufacturer.Id"></i>

                        </span>


                        <div class="modal fade" id="deleteModal_@manufacturer.Id" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">

                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="deleteModalLabel">Delete Manufacturer</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <h3>Are you sure you want to delete this manufacturer?</h3>
                                    </div>

                                    <div class="modal-footer">
                                        <form asp-action="Delete" class="mt-3">
                                            <input type="hidden" name="id" value="@manufacturer.Id" />
                                            <a class="btn btn-secondary" data-bs-dismiss="modal">Cancel</a>
                                            <input type="submit" value="Delete" class="btn btn-danger ms-1" />
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
            </td>
        </tr>
}
    </tbody>
</table>
</div>