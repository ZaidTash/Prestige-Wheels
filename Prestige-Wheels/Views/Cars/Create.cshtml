@using Prestige_Wheels.Enums;
@using Prestige_Wheels.Models.Cars;
@model CarViewModel

@{
    ViewData["Title"] = "Create";
}
<div class="container">
<h1>Create New Car</h1>

>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Brand" class="control-label"></label>
                <input asp-for="Brand" class="form-control" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label mt-2"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarType" class="control-label mt-2"></label>
                <select asp-for="CarType" asp-items="@Html.GetEnumSelectList<CarType>()" class="form-control "></select>
                <span asp-validation-for="CarType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label mt-2"></label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label mt-2"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                <input type="submit" value="Create" class="btn btn-primary ms-1" />
            </div>
        </form>
    </div>
</div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
