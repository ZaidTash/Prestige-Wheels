@using Prestige_Wheels.Models.Cars;
@model IEnumerable<CarViewModel>

@{
    ViewData["Title"] = "Index";
}
<div class="container">
<h1>Cars</h1>
<hr/>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New Car</a>
</p>
<table class="table table-striped data-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var car in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => car.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => car.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => car.CarType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => car.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => car.Color)
            </td>
            <td>
                <a class="text-decoration-none" asp-action="Edit" asp-route-id="@car.Id">
                            <i class="fa-solid fa-pen"></i>
                </a> 
                <a class="text-decoration-none ms-2" asp-action="Details" asp-route-id="@car.Id">
                            <i class="fa-solid fa-circle-info"></i>
                </a> 
                    
                        <span class="pe-auto ms-2 text-danger" data-bs-toggle="tooltip" data-bs-title="Delete">

                            <i class="fa-solid fa-trash" data-bs-toggle="modal" data-bs-target="#deleteModal_@car.Id"></i>

                        </span>

                       
                        <div class="modal fade" id="deleteModal_@car.Id" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">

                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="deleteModalLabel">Delete Car</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <h3>Are you sure you want to delete this car?</h3>
                                    </div>

                                    <div class="modal-footer">
                                        <form asp-action="Delete" class="mt-3">
                                            <input type="hidden" name="id" value="@car.Id" />
                                            <a class="btn btn-secondary" data-bs-dismiss="modal">Cancel</a>
                                            <input type="submit" value="Delete" class="btn btn-danger ms-1" />
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
            
        </tr>
}
    </tbody>
</table>
</div>